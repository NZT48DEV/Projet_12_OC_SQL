erDiagram
    EMPLOYEES ||--o{ CLIENTS : "sales_contact"
    CLIENTS   ||--o{ CONTRACTS : "has"
    CONTRACTS ||--o{ EVENTS : "covers"
    EMPLOYEES ||--o{ EVENTS : "support_contact"

    EMPLOYEES {
      int id PK
      string first_name
      string last_name
      string email "UNIQUE"
      string role "MANAGEMENT|SALES|SUPPORT"
      string password_hash
      datetime created_at
    }

    CLIENTS {
      int id PK
      string full_name
      string email "UNIQUE"
      string phone
      string company_name
      int sales_contact_id FK
      datetime created_at
    }

    CONTRACTS {
      int id PK
      int client_id FK
      int sales_contact_id FK
      decimal total_amount
      decimal amount_due
      boolean is_signed
      datetime created_at
    }

    EVENTS {
      int id PK
      int contract_id FK
      int client_id FK
      int support_contact_id FK "nullable"
      datetime start_date
      datetime end_date
      string location
      int attendees
      string notes
      datetime created_at
    }
